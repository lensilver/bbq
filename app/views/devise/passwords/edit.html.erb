<h2><%= t('text.change_your_password') %></h2>

<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <%= f.hidden_field :reset_password_token %>

  <div class="row">
    <div class="col-md-4 buffer-top">
      <div class="form-group">
        <%= f.label :password %><br />
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> <%= t('text.characters_minimum') %>) <%= fa_icon('lock') %></em>
        <% end %><br />
        <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %> <%= fa_icon('lock') %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit t('text.change_your_password'), class: "btn btn-primary mt-3" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
