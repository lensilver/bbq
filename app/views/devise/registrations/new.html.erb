<h2><%= t('buttons.sign_up') %></h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="row">
    <div class="col-md-4 buffer-top">
      <div class="form-group">
        <%= f.label :email %> <%= fa_icon('envelope') %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control' %>
      </div>
  
      <div class="form-group">
        <%= f.label :name %> <%= fa_icon('user') %><br />
        <%= f.text_field :name, autofocus: false, autocomplete: "name", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password %>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> <%= t('text.characters_minimum') %>)</em>
        <% end %> <%= fa_icon('lock') %><br />
        <%= f.password_field :password, autocomplete: "new-password", class: 'form-control' %>
      </div>

      <div class="form-group">
        <%= f.label :password_confirmation %> <%= fa_icon('lock') %><br />
        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: 'form-control' %>
      </div>
    </div>
  </div>

  <div class="actions">
    <%= f.submit t('buttons.sign_up'), class: "btn btn-primary mt-3" %>
  </div>
  
<% end %>

<%= render "devise/shared/links" %>